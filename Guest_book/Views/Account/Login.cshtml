@model Guest_book.Models.LoginModel

@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<header id="headerLogin">
	<a class="navbar-brand" asp-area="" asp-controller="Messages" asp-action="Index">Главная</a>
</header>

<div id="formLogIn">
	<form asp-action="Login">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="login" class="control-label">Логин</label>
			<input asp-for="login" class="form-control" />
			<span asp-validation-for="login" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="password" class="control-label">Пароль</label>
			<input asp-for="password" class="form-control" />
			<span asp-validation-for="password" class="text-danger"></span>
		</div>
		<div id="loginAndLogInLikeGuest">
			<input type="submit" value="Ввойти" id="btnSubmit" style="width: 100px;" />
			<a asp-area="" asp-controller="Messages" asp-action="Index" id="btnSubmit" style="width: 170px;">Ввойти как гость</a>
		</div>
	</form>
	<div id="regBtn">
		<a  asp-area="" asp-controller="Account" asp-action="Register">Зарегистрироваться?</a>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}