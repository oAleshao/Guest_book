@model Guest_book.Models.RegisterModel

@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="headerLogin">
	<a class="navbar-brand" asp-area="" asp-controller="Messages" asp-action="Index">Главная</a>
</header>

<div id="formReg">
	<form asp-action="Register">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="FirstName" class="control-label">Имя</label>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="LastName" class="control-label">Фамилия</label>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="login" class="control-label">Логин/почта</label>
			<input asp-for="login" class="form-control" />
			<span asp-validation-for="login" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="password" class="control-label">Пароль
			</label>
			<input asp-for="password" class="form-control" />			
			<span asp-validation-for="password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="passwordConfirm" class="control-label">Подтрверждение пароля</label>
			<input asp-for="passwordConfirm" class="form-control" />
			<span asp-validation-for="passwordConfirm" class="text-danger"></span>
		</div>
		<div>
			<input type="submit" value="Зарегистрироваться" id="regBtnSumbmit" style="width: 170px;" />
		</div>
	</form>
	<div id="regBtn">
		<a asp-area="" asp-controller="Account" asp-action="Login">Уже есть аккаунт? Войти</a>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}