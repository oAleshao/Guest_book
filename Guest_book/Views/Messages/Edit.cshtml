

@model Guest_book.Models.Message

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="headerHome">
	<div>
		<a class="navbar-brand" asp-area="" asp-controller="Messages" asp-action="Index">Главная</a>
	</div>
	<div>
		<h1>@Model.user.FirstName @Model.user.LastName</h1>
		<a asp-controller="Account" asp-action="Login">Выйти</a>
	</div>
</header>

<div id="EditMessagePage">
	<form asp-action="Edit" asp-controller="Messages">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input asp-for="Id" value="@Model.Id" type="hidden" />
		<div class="form-group">
			<label asp-for="message" class="control-label">Ваш отзыв</label>
			<textarea asp-for="message" class="form-control"></textarea>
			<span asp-validation-for="message" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input asp-for="UserId" value="@Model.UserId" type="hidden" />
		</div>
		<div class="form-group">
			<input type="submit" value="Изменить" />
			<a asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
		</div>
	</form>

</div>
